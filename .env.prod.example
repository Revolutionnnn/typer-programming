# ─── Production Environment ───
# Copy this file to .env.prod and fill in real values before deploying.
# NEVER commit .env.prod with real secrets to version control.

# Server
PORT=8080
API_PORT=8080
WEB_PORT=80

# Authentication – CHANGE THIS to a strong random secret (min 32 chars)
JWT_SECRET=CHANGE_ME_TO_A_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARS

COOKIE_SECURE=true

# PostgreSQL – CHANGE these credentials
POSTGRES_USER=typer
POSTGRES_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD
POSTGRES_DB=typer
DATABASE_URL=postgres://typer:CHANGE_ME_TO_A_STRONG_PASSWORD@db:5432/typer?sslmode=disable

# Content
CONTENT_DIR=/app/content

ALLOWED_ORIGINS=https://yourdomain.com
